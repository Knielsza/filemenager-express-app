<div class="body">
    <div class="left">
        <div class='small-btns'>
            <button id="less" hidden></button>
            <button style="background-color: white; margin-top: 5px" id="changecolor">Themes</button>
        </div>
        <button id="saveSettings">Zapisz ustawienia</button>
        <button id="renameFile">Zmiana nazwy</button>
        {{!-- <form action="/previewFile={{urlPath}}" method="get">
            <button style="width: 100%;" id="addfile">Podgląd pliku</button>
        </form> --}}
    </div>
    <div class="right" style="padding: 0;">
        <div class="editor-top">
            <p style='color: white;align-self: center;'>{{path}}</p>
            <button style="width: 20%; margin: 5px; padding: 3px; background: white" id="saveChanges">Zapisz zmiany</button>
        </div>
        <div class="flex-max scrollable" id="style-switcher">
            <textarea style="width: 32px; text-align: center" id="line-counter" readonly></textarea>
            <textarea spellcheck="false" id="text-contents" onkeyup="onTextareaInput()">{{contents}}</textarea>
        </div>
    </div>

    <dialog id="new-file-name" style="background-color: gray;">
        <form action="/newfilename" method="post" id="new">
            <p>Zmień nazwę pliku:</p>
            <input type="text" name="name" pattern='^[^<>:&#147\/\\|?*\x00-\x1F]+[^ .\\\/&#147]$'
                value="{{currentFile}}" required>
            <div>
                <button type="submit">OK</button>
                <button id="cancel3" type="cancel">CANCEL</button>
            </div>
        </form>
    </dialog>